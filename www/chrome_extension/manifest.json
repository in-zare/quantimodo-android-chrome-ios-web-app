{
  "manifest_version": 2,
  "name": "QuantiModo Life-Tracking Extension",
  "description": "Track and find out what influences your mood!",
  "version": "2.3.0",
  "options_page": "www/chrome_extension/options/options.html",
  "icons": {
    "16"	: "www/img/icons/icon_16.png",
    "48"	: "www/img/icons/icon_48.png",
    "128"	: "www/img/icons/icon_128.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "cookies",
    "tabs",
    "https://app.quantimo.do/*",
    "*://cdn.rawgit.com/*"
  ],
  "browser_action": {
    "default_icon": "www/img/icons/icon_700.png",
    "default_popup": "www/templates/chrome/reminders-inbox-iframe.html"
  },
  "background": {
    "scripts": ["www/js/chrome/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "css": ["www/chrome_extension/styles.css"],
    "js": ["www/lib/jquery/dist/jquery.min.js", "www/chrome_extension/content.js"],
    "matches": ["https://quantimo.do/*"]
  }],
  "web_accessible_resources": ["www/chrome_extension/ionic-ball.html"]
}
